<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/gambar"
        android:layout_marginLeft="13dp"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:scaleType="centerCrop"
        android:src="@drawable/pnp"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Politeknik Negeri Padang"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/instruksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limau Manih, Padang, Sumbar"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/pil1"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manajemen Informatika" />

    <Button
        android:id="@+id/pil2"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teknik Komputer" />

    <Button
        android:id="@+id/pil3"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galeri Gambar" />


</LinearLayout>
